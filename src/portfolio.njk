---
title: Portfolio
layout: layout.njk
js: ["plugins/imagesloaded.pkgd.min.js", "plugins/isotope.pkgd.min.js", "js/isotope-custom.js"]
---


<section class="cta-section theme-bg-light py-5">
    <div class="container text-center single-col-max-width">
        <h2 class="heading">Portfolio</h2>
        <div class="intro">
        <p>Welcome to my online portfolio. I'm taking on freelance work at the moment. Want some help building your software?</p>
        
        </div>
        <a class="btn btn-primary" href="/contact"><i class="fas fa-paper-plane mr-2"></i>Hire Me</a>
        
        
    </div><!--//container-->
</section>
<section class="projects-list px-3 py-5 p-md-5">
    <div class="container">
        <div class="text-center">
            <ul id="filters" class="filters mb-5 mx-auto pl-0">
                <li class="type active mb-3 mb-lg-0" data-filter="*">All</li>
                <li class="type  mb-3 mb-lg-0" data-filter=".wordpress">WordPress websites</li>
                <li class="type  mb-3 mb-lg-0" data-filter=".react">React websites</li>
                <li class="type  mb-3 mb-lg-0" data-filter=".django">Django Websites</li>
            </ul><!--//filters-->
        </div>
        
        <div class="project-cards row isotope">

            {% for project in collections.project | sort(true, false, 'date') %}

                <div class="isotope-item col-md-6 mb-5 mobileapp {{ project.data.type }}">
                    <div class="card project-card">
                        <div class="row no-gutters">
                            <div class="col-lg-4 card-img-holder">
                                <img src="/assets/images/project/{{ project.data.image }}" class="card-img" alt="Project screenshot">
                            </div>
                            <div class="col-lg-8">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h5 class="card-title"><a href="{{ project.url }}" class="theme-link">{{ project.data.title }}</a></h5>
                                        {% if project.data.current_project %}
                                            <span><i class="fas fa-star mr-1 text-yellow"></i></span>
                                        {% endif %}
                                    </div>    
                                    <p class="card-text">{{ project.data.description }}</p>
                                    <p class="card-text"><small class="text-muted">Client: {{ project.data.client }}</small></p>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center align-items-center link-mask">
                            <a class="link-mask-text" href="{{ project.url }}">
                                <a class="btn btn-secondary" href="{{ project.url }}">
                                    <i class="fas fa-eye mr-2"></i>View Case Study
                                </a>
                            </a>
                        </div><!--//link-mask-->
                    </div><!--//card-->
                </div><!--//col-->

            {% endfor %}

        </div><!--//row-->
    
    </div>
</section>