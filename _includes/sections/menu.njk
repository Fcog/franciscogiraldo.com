<nav>

    {% set navPages = collections.all | eleventyNavigation %}

    <ul class="flex">

        {%- for entry in navPages %}

            {% if entry.url != page.url %}

            <li class="mx-1 md:mx-4">

                <a
                    href="{{ entry.url | url }}"
                    class="underline text-sm md:text-base {% if entry.url == page.url %} text-custom-blue{% endif %}"
                    {% if entry.url == page.url %} data-current="current item"{% endif %}>
                    {{ entry.title }}
                </a>

            </li>

            {% endif %}

        {%- endfor %}

    </ul>

</nav>
