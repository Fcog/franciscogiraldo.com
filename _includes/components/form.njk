{% set label_class = 'block text-custom-black text-md mb-2' %}
{% set input_class = 'shadow appearance-none border rounded w-full py-2 px-3 text-custom-black mb-3 leading-tight focus:outline-none focus:shadow-outline' %}

<form name="contact" method="POST" netlify>

    <label for="name" class="{{ label_class }}">Name</label>

    <input
        type="text"
        name="name"
        id="name"
        autocomplete="name"
        placeholder="Your name"
        title="Please enter your name"
        required
        class="{{ input_class }}">

    <label for="email" class="{{ label_class }}">Email</label>

    <input
        type="email"
        name="email"
        id="email"
        autocomplete="email"
        placeholder="Your email address"
        title="The domain portion of the email address is invalid (the portion after the @)."
        pattern="^([^\x00-\x20\x22\x28\x29\x2c\x2e\x3a-\x3c\x3e\x40\x5b-\x5d\x7f-\xff]+|\x22([^\x0d\x22\x5c\x80-\xff]|\x5c[\x00-\x7f])*\x22)(\x2e([^\x00-\x20\x22\x28\x29\x2c\x2e\x3a-\x3c\x3e\x40\x5b-\x5d\x7f-\xff]+|\x22([^\x0d\x22\x5c\x80-\xff]|\x5c[\x00-\x7f])*\x22))*\x40([^\x00-\x20\x22\x28\x29\x2c\x2e\x3a-\x3c\x3e\x40\x5b-\x5d\x7f-\xff]+|\x5b([^\x0d\x5b-\x5d\x80-\xff]|\x5c[\x00-\x7f])*\x5d)(\x2e([^\x00-\x20\x22\x28\x29\x2c\x2e\x3a-\x3c\x3e\x40\x5b-\x5d\x7f-\xff]+|\x5b([^\x0d\x5b-\x5d\x80-\xff]|\x5c[\x00-\x7f])*\x5d))*(\.\w{2,})+$"
        required
        class="{{ input_class }}">

    <label for="message" class="{{ label_class }}">Message</label>

    <textarea
        name="message"
        id="message"
        placeholder="Write your message here"
        rows="7"
        required
        class="{{ input_class }}"></textarea>

    <button
        class="bg-custom-blue hover:bg-blue-900 text-white py-2 px-4 rounded focus:outline-none focus:shadow-outline"
        type="submit"
        name="submit">
        Send Message
    </button>

</form>
